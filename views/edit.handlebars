<div class="container">
        <h1>Modifier l'article</h1>

        <form action="/articles/{{article.id}}?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Titre</label>
                <input  value=" {{article.title}}  " type="text" name="title" id="title" class="form-control">
            </div>

            <div class="form-group">
                <label for="markdown">Contenu</label>
                <textarea  id="markdown" name="content" class="form-control">
                     {{article.content}} 
                </textarea>
            </div>

            <div class="field">
                <label for="" class="label">
                    Auteur
                </label>
                <div class="control">
                    <input type="text" class="input" name="author" value="{{article.author}} " />
                </div>
            </div>

            <a href="/" class="btn btn-secondary">Annuler</a>
            <button type="submit" class="btn btn-primary">Modifier</button>
        </form>
    </div>
    
<script>
    CKEDITOR.replace('content')
</script>
<div class="container">
        <h1>Modifier l'article</h1>

        <form action="/articles/{{article.id}}?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Titre</label>
                <input required value=" {{article.title}}  " type="text" name="title" id="title" class="form-control">
            </div>

            <div class="form-group">
                <label for="markdown">Contenu</label>
                <textarea required id="markdown" name="content" class="form-control">
                     {{article.content}} 
                </textarea>
            </div>

            <a href="/" class="btn btn-secondary">Annuler</a>
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </form>
    </div>
    
<script>
    CKEDITOR.replace('content')
</script>
<section class="section">
    <div class="container is-fullhd">
      <form action="/user/register" method="POST" enctype="multipart/form-data">

{{#each errors}}

<div class="content">
  <ul class="help is-danger">
    <li>{{this}}</li>
  </ul>
</div>
{{/each}}

        <div class="field">
                  <div class="control">
                      <input placeholder="Nom" type="text" class="input" name="name" value="{{data.name}}" />
                  </div>
              </div>
          <div class="field">
          <p class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="Email" name="email" value="{{data.email}}">
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
            <span class="icon is-small is-right">
              <i class="fas fa-check"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <p class="control has-icons-left">
            <input class="input" type="password" placeholder="Mot de passe" name="password" value="{{data.passsword}}">
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <button class="button is-success">
              Enregister
            </button>
          </p>
          <p class="control">
              <a href="/" class="button is-danger">Annuler</a>
          </p>
        </div>
      </form>

    </div>
</section>
